<ContentDialog
    x:Class="Notepads.Controls.Dialog.SetCloseSaveReminderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Notepads.Controls.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="SetCloseSaveReminderDialog"
    d:CloseButtonText="Cancel"
    d:Content="Save file &quot;C:\Test.txt&quot;?"
    d:PrimaryButtonText="Save"
    d:SecondaryButtonText="Don't Save"
    d:Title="Save your changes?"
    PrimaryButtonClick="SetCloseSaveReminderDialog_PrimaryButtonClick"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
    SecondaryButtonClick="SetCloseSaveReminderDialog_SecondaryButtonClick"
    Style="{StaticResource NotepadsDialogStyle}"
    mc:Ignorable="d" />
